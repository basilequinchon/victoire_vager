<div class="bg-white border d-flex align-items-center justify-content-between p-3">
  <div class="experience-card__infos-left col-10">
    <h1 style='font-size: 1rem'><strong><%= @experience.company %></strong></h1>
    <div class="d-flex">
      <p><%= @experience.start_date.year %> -
        <% if @experience.current %>
          Aujourd'hui</p>
        <% else %>
          <%= @experience.end_date.year %></p>
        <% end %>
    </div>
    <p><em><%= @experience.role %></em></p>
    <p><%= @experience.description %></p>
  </div>
  <div class="d-flex col-1">
    <%= link_to experience_path(@experience), data: { confirm: 'Veux-tu vraiment supprimer ce projet ?' }, method: :delete do %>
      <i class="fas fa-trash-alt pr-2"></i>
    <% end %>
    <%= link_to edit_experience_path(@experience) do %>
      <i class="far fa-edit"></i>
    <% end %>
  </div>
</div>
